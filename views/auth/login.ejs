<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
       <%- include('../includes/flash-message.ejs') %>
       <%if(errorMessage) {%>
       <div class="user-message user-message--error"><%=errorMessage%></div>
       <% } %>
        <form class="login-form" action="/login" method="POST" novalidate>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input
                 class="<%= validationErrors.find(e => e.path==='email') ? 'invalid':''%>" 
                  type="email" name="email" id="email" value="<%=oldInput.email%>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input class="<%= validationErrors.find(e => e.path==='password') ? 'invalid':''%>"  type="password" name="password" id="password" value="<%=oldInput.password%>">
            </div>
            <div class="centered">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                <button class="btn" type="submit">Login</button>
            </div>
            <div class="centered">
                <a class="btn reset" href="/reset">Forgot Password</a>
            </div>
        </form>

    </main>
<%- include('../includes/end.ejs') %>